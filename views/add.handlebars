<form class="addItemForm">
  <div class="form-group">

    <label for="nameInput"><h5>Item Name</h5></label>
    <input type="name" class="form-control" id="nameInput" aria-describedby="nameHelp"
      placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label for="itemDimensions"><h5>Item Dimensions</h5></label>
    <input type="itemDimensions" class="form-control" id="itemDimensions" placeholder="Item Dimensions">
  </div>
  <div class="form-group">
    <label for="itemOwner"><h5>Item Owner</h5></label>
    <input type="itemOwner" class="form-control" id="itemOwner" placeholder="Who owns this item?">
  </div>
  <div class="form-group">
    <label for="itemLocation"><h5>Item Location</h5></label>
    <input type="itemLocation" class="form-control" id="itemLocation" placeholder="Where is this item?">
  </div>
  <div class="form-group">
    <label for="itemValue"><h5>Item Value</h5></label>
    <input type="number" class="form-control" id="itemValue" placeholder="How much is this item worth?">
  </div>
  <div class="form-group">
    <label for="itemPicture"><h5>Item Picture</h5></label>
    <input type="itemPicture" class="form-control" id="itemPicture" placeholder="Upload a picture of this item">
  </div>
  <div class="form-group">
    <label for="itemComments"><h5>Comments</h5></label>
    <input type="itemComments" class="form-control" id="itemComments" placeholder="Additional Comments">
  </div>
  <div class="form-group">
    <label for="category"><h5>Category</h5></label>
    <input type="category" class="form-control" id="category" placeholder="Category that the item fits into">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="../js/addItem.js"></script>