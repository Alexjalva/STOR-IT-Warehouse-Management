<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>

  <div class="container">
    {{> navbar}}
  </div>

  <div class="wrapper">
    <header>
      <h1 class="has-text-black px-3 py-3 has-text-weight-bold coolTitle">STOR-IT Warehouse Management</h1>
      <nav class="navbar mt-2">
        {{#if loggedIn}}
        <a href="/" class="navbar-item is-hoverable pt-1">Home</a>
        <a href="/dashboard" class="navbar-item is-hoverable pt-1">Dashboard</a>
        <a href="/dashboard/add/" class="navbar-item is-hoverable pt-1 mr-4">Add New Item</a>
        <button id="logout" class="button is-danger">Logout</button>
        {{else}}
        <a href="/" class="navbar-item is-hoverable pt-1">Homepage</a>
        <a href="/login" class="button is-primary loginButton">Login</a>
        {{/if}}
      </nav>
    </header>


    <div class="container">
      {{{ body }}}
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>
    </div>

    <footer class="footer rows pb-2">
      <div class="row-is-full content has-text-centered">
        <p>
          <a href="/">Homepage</a>{{#if loggedIn}} |
          <a href="/dashboard/">Dashboard</a> |
          <a href="/dashboard/add/">Add New Item</a>
          <a href="/dashboard/edit/">Edit Item</a>
          {{else}}
          | <a href="/login/">Login</a>
          {{/if}}
        </p>
      </div>
      <div class="row-is-full content has-text-centered">
        <p>
          STOR-IT Warehouse Management <a href="https://github.com/Alexjalva/STOR-IT-Warehouse-Management">SAVAGE MIDNIGHT TOADS</a>
        </p>
      </div>
    </footer>
  </div>

  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}

</body>

</html>